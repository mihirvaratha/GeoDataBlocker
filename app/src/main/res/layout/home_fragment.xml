<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nplproject.sem6.geodatablocker.HomeFragment">


    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/circle"
        android:drawableTint="@color/textColorPrimary"
        android:drawableTop="@android:drawable/ic_media_play"
        android:elevation="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="START SERVICE"
        android:textColor="@color/textColorPrimary" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnStart"
        android:layout_alignStart="@+id/btnStart"
        android:layout_below="@+id/btnStart"
        android:layout_marginTop="30dp"
        android:background="@drawable/circle"
        android:drawableTint="@color/textColorPrimary"
        android:drawableTop="@android:drawable/ic_lock_power_off"
        android:paddingBottom="12dp"
        android:paddingTop="10dp"
        android:text="STOP  SERVICE"
        android:textColor="@color/textColorPrimary" />
</RelativeLayout>